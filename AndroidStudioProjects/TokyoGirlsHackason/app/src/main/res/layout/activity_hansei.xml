<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shigeki_kubo.firstapp.HanseiActivity"
        android:background="@color/colorBackGround"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="今日の服装はどうでしたか？"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="35dp" />

        <Button
            android:id="@+id/Button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_style"
            android:onClick="selectAtsukatta"
            android:text="暑かった"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <Button
            android:id="@+id/Button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_style"
            android:onClick="selectTyoudoyokatta"
            android:text="ちょうどよかった"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="109dp" />

        <Button
            android:id="@+id/Button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_style"
            android:onClick="selectSamukatta"
            android:text="寒かった"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="194dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_style"
            android:onClick="selectModoru"
            android:text="戻る" />

    </LinearLayout>
